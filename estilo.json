@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

:root {
    --azul-escuro: #0a2eff;
    --azul-medio: #667eea;
    --azul-claro: #a3bffa;
    --branco: #ffffff;
    --cinza-claro: #f8f9fa;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
}

body {
    background: url('../img/pim.png') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    position: relative;
    color: #333;
}

body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

.container {
    display: grid;
    grid-template-columns: 250px 1fr;
    min-height: 100vh;
}

/* Sidebar */
.sidebar {
    background: rgba(255, 255, 255, 0.9);
    padding: 20px;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
}

.sidebar h2 {
    color: var(--azul-escuro);
    margin-bottom: 20px;
    font-size: 1.3rem;
}

.suporte-item {
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #eee;
}

.suporte-item h3 {
    color: var(--azul-medio);
    font-size: 1rem;
    margin-bottom: 5px;
}

.suporte-item p {
    font-size: 0.85rem;
    color: #666;
}

.chatbot {
    margin-top: 30px;
    background: var(--azul-claro);
    padding: 15px;
    border-radius: 8px;
}

.chatbot h3 {
    color: var(--branco);
    margin-bottom: 10px;
}

.chatbot input {
    width: 100%;
    padding: 8px;
    border: none;
    border-radius: 4px;
    margin-bottom: 10px;
}

.chatbot button {
    background: var(--azul-escuro);
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s;
}

.chatbot button:hover {
    background: var(--azul-medio);
}

/* Main Content */
.main-content {
    padding: 30px;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header h1 {
    color: var(--branco);
    font-size: 1.8rem;
}

.calendario {
    background: rgba(255, 255, 255, 0.9);
    padding: 15px;
    border-radius: 8px;
    width: 300px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.calendario h2 {
    color: var(--azul-escuro);
    font-size: 1.2rem;
    margin-bottom: 15px;
    text-align: center;
}

.dias-semana, .dias-calendario {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 5px;
}

.dias-semana div {
    text-align: center;
    font-weight: bold;
    color: var(--azul-medio);
    font-size: 0.8rem;
}

.dias-calendario div {
    text-align: center;
    padding: 5px;
    border-radius: 4px;
    cursor: pointer;
}

.dias-calendario div:hover {
    background: var(--azul-claro);
    color: white;
}

.dia-atual {
    background: var(--azul-medio);
    color: white !important;
}

/* Cursos */
.cursos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.curso-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s;
}

.curso-card:hover {
    transform: translateY(-5px);
}

.curso-card h2 {
    color: var(--azul-escuro);
    margin-bottom: 15px;
    font-size: 1.3rem;
}

.curso-card p {
    color: #666;
    margin-bottom: 20px;
    font-size: 0.9rem;
}

.btn-curso {
    display: inline-block;
    background: linear-gradient(to right, var(--azul-escuro), var(--azul-medio));
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
}

.btn-curso:hover {
    background: linear-gradient(to right, var(--azul-medio), var(--azul-escuro));
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

/* PÃ¡gina de Curso */
.curso-header {
    background: rgba(255, 255, 255, 0.95);
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 30px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.curso-header h1 {
    color: var(--azul-escuro);
    margin-bottom: 10px;
}

.modulos {
    background: rgba(255, 255, 255, 0.95);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.modulo {
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
}

.modulo:last-child {
    border-bottom: none;
}

.modulo h2 {
    color: var(--azul-medio);
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.modulo p {
    color: #666;
    margin-bottom: 15px;
}

/* Responsivo */
@media (max-width: 768px) {
    .container {
        grid-template-columns: 1fr;
    }
    
    .sidebar {
        display: none; /* Pode ser transformado em menu mobile */
    }
    
    .calendario {
        width: 100%;
    }
}